# AI Service Environment Variables
DATABASE_URL=postgresql://lms_user:lms_pass@localhost:5432/lms_db

# Must match backend JWT_SECRET exactly
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Must match backend AI_SERVICE_SECRET
AI_SERVICE_SECRET=internal-service-secret-key

# LLM Providers (add keys as needed)
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional runtime cache (recommended for faster repeated answers)
REDIS_URL=redis://localhost:6379/0

# Optional vector store providers (required only when selected by tenant config)
PINECONE_API_KEY=
PINECONE_INDEX=enterprise-rag
PINECONE_CLOUD=aws
PINECONE_REGION=us-east-1
QDRANT_USE_MEMORY=true
QDRANT_HOST=localhost
QDRANT_PORT=6333

# CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Server
AI_SERVICE_PORT=8000
NODE_ENV=development

# File uploads
MAX_FILE_SIZE_MB=50

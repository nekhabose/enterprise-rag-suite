# File Upload
MAX_FILE_SIZE_MB=50
UPLOADS_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,docx,txt,md,csv,pptx,xlsx

# Impersonation
IMPERSONATION_MAX_DURATION_MINS=60
